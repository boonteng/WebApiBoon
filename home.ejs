<html>
    <head>
        <% include ../partials/header.ejs %>
       <title>Pokemon</title>
    </head>
    <body>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                      <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                      <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                      <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
                    </ol>
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img class="img-fluid " style="height:450px;width:100%" src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/98/International_Pok%C3%A9mon_logo.svg/1200px-International_Pok%C3%A9mon_logo.svg.png" >
                        <div class="carousel-caption d-none d-md-block">
                            <h5>International Pokemon Logo</h5>
                        </div>
                      </div>
                      <div class="carousel-item">
                        <img class="img-fluid" style="height:450px;width:100%" src="https://o.aolcdn.com/images/dims?quality=85&image_uri=http%3A%2F%2Fo.aolcdn.com%2Fhss%2Fstorage%2Fmidas%2F6623d5a6ae583f81ee3515b6b3615c7f%2F204855766%2Flandscape-1456483171-pokemon2.jpg&client=amp-blogside-v2&signature=a66341cc83efebc3c63cadf0db972d9a16e1b05d" >
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Bulbasaur & Pikachu & Charmander & Squirtle</h5>
                        </div>
                      </div>
                      <div class="carousel-item">
                        <img class="img-fluid" style="height:450px;width:100%" src="https://cdn.vox-cdn.com/thumbor/IKt535q8LMnJDddmLL74TBtzv88=/0x266:1024x949/1280x854/cdn.vox-cdn.com/uploads/chorus_image/image/48942277/N3DS_PokemonSuperMysteryDungeon_MainIllustration_png_jpgcopy.0.0.jpg">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Pokemon Super Mystery Dungeon MainIllustration</h5>
                        </div>
                      </div>
                      <div class="carousel-item">
                        <img class="img-fluid " style="height:450px;width:100%" src="http://getwallpapers.com/wallpaper/full/f/3/3/53560.jpg" >
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Charmander</h5>
                        </div>
                      </div>
                      <div class="carousel-item">
                        <img class="img-fluid " style="height:450px;width:100%" src="https://i.pinimg.com/originals/fc/15/89/fc158956845d8a992e748270d2192e03.jpg">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Cute Pokemon</h5>
                        </div>
                      </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                  </div>
           <div>
                <form action="/insert" method="post">
                
                          <Input
                            type="text"
                            name="pokename"
                            id="name"
                            placeholder="enter pokemon name..."
                          />
                    
                        <Button type=submit class="btn btn-info">Add</Button>
                      </form>
           </div>
        <div>
            <Table
              class="table table-bordered table-striped"
              size="sm"
              style= "background-Color: '#F5F5DC'">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>NationalPokedexNumber</th>
                  <th>imageUrl</th>
                  <th>Character Url</th>
                  <th>Delete</th>   
                </tr>
              </thead>
              <tbody>
                <%for(var a=0; a<pokemon.length;a++){%>
                    <tr>
                        <td><%= pokemon[a].name%></td>
                        <td><%= pokemon[a].nationalPokedexNumber%></td>
                        <td><%= pokemon[a].imageUrl%></td>
                        <td><%= pokemon[a].url%></td>
                        <td><button class="btn btn-info" onclick="location.href='/delete/<%= pokemon[a]._id%>'">Delete</button></td>
                    </tr>
                <%}%>
               
              </tbody>
            </Table>
          
           
         </div>
    </body>
</html>